@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}


<h1>All Employess </h1>
<br />
<br />
<a asp-action="Create" asp-controller="Employee" class="btn btn-primary"> Add New Employee</a>
<br />

<form class="m-4" asp-action="Index" asp-controller="Employee">

    <div class="row">
        <div class="col-10">
            <input placeholder="Search for employee by name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-2">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
        <th>@Html.DisplayNameFor(E=> E.Image)</th>
        <th>@Html.DisplayNameFor(E=> E.Name)</th>
        <th>@Html.DisplayNameFor(E=> E.Age)</th>
        <th>@Html.DisplayNameFor(E=> E.Email)</th>
        <th>@Html.DisplayNameFor(E=> E.Phone)</th>
        <th>@Html.DisplayNameFor(E=> E.department)</th>
        <th>@Html.DisplayNameFor(E=> E.Address)</th>
        <th>@Html.DisplayNameFor(E=> E.Salary)</th>
        <th>@Html.DisplayNameFor(E=> E.IsActive)</th>
        <th>@Html.DisplayNameFor(E=> E.HireDate)</th>

        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td><img src="~/Files/Images/@employee.ImageName" class="img-fluid rounded" height="40" width="40" /></td>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Email</td>
                    <td>@employee.Phone</td>
                    <td>@employee.department?.Name</td>
                    <td>@employee.Address</td>
                    <td>@employee.Salary</td>
                    <td>@employee.IsActive</td>
                    <td>@employee.HireDate</td>
                    <partial name="ButtonsPartialView" model="@employee.Id.ToString()">
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <div class="m-3 alert alert-warning">
        <p>No Employees ! </p>

    </div>
}
