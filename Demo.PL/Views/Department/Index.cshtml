@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Department </h1>
<br /><br />

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">
    @TempData["Message"]
</div>
    
}
<a asp-action="Create" asp-controller="Department" class="btn btn-primary"> Create New Department</a>
<br />
@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">


        <thead>
            <th>@Html.DisplayNameFor(D=> D.Code)</th>
            <th>@Html.DisplayNameFor(D=> D.Name)</th>
            <th>@Html.DisplayNameFor(D=> D.DateOfCreation)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateOfCreation</td>
                   <partial name="ButtonsPartialView" model="@item.Id.ToString()">
                </tr>
            }
        </tbody>
    </table>
}else
{

    <div class="m-3 alert alert-warning">
        <p>No Department ! </p>

    </div>
}
