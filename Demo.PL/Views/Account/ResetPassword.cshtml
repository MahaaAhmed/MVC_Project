@model ResetPasswordViewModel
@{
    ViewData["Tittle"] = "ResetPassword";
    Layout = "_AuthLayout";
}
	<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-action="ResetPassword">
					<div asp-validation-summary="All"></div>
					<input  asp-for="Email" type="hidden" />
					<input  asp-for="Token" type="hidden" />
					<input class="text" type="password" asp-for="NewPassword"  placeholder="New Password" required="">
					<input class="text w3lpass" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">

					<input type="submit" value="RESET PASSWORD">
				</form>
			</div>
		</div>