@model loginViewModel
@{
    ViewData["Tittle"] = "Login Page";
    Layout = "_AuthLayout";
}
	<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-action="Login">
					<div asp-validation-summary="All"></div>
					<input class="text email" type="email" asp-for="Email"  placeholder="Email" required="">
					<input class="text" type="password" asp-for="Password"  placeholder="Password" required="">
					<div class="wthree-text">
						<label class="anim">
							<input type="checkbox" asp-for="RememberMe" class="checkbox">
							<span>Remember Me !</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="LOGIN">
				</form>
				<p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
			</div>
			<div class=" col-6 mt-3">

				<p>
					<a asp-action="ForgetPassword" asp-controller="Account"> Forget Password ?!	</a>
				</p>
			</div>



		</div>