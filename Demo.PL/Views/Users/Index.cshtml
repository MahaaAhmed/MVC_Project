@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}


<h1>All Users </h1>
<br />
<br />

<form class="m-4" asp-action="Index" asp-controller="Users">

    <div class="row">
        <div class="col-10">
            <input placeholder="Search for email" name="SearchValue" class="form-control" />
        </div>
        <div class="col-2">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
        <th>@Html.DisplayNameFor(E=> E.Id)</th>
        <th>@Html.DisplayNameFor(E=> E.UserName)</th>
        <th>@Html.DisplayNameFor(E=> E.Email)</th>
        <th>@Html.DisplayNameFor(E=> E.PhoneNumber)</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <partial name="ButtonsPartialView" model="@user.Id">
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <div class="m-3 alert alert-warning">
        <p>No Users ! </p>

    </div>
}
